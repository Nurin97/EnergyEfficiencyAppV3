<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue_Background"
    tools:context=".MainActivity">


    <View
        android:id="@+id/layoutTable"
        android:layout_width="324dp"
        android:layout_height="625dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/background_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Energy_Usage_Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/energycalculator"
        app:layout_constraintEnd_toEndOf="@+id/layoutTable"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/layoutTable"
        app:layout_constraintTop_toTopOf="@+id/layoutTable"
        app:layout_constraintVertical_bias="0.76" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/Appliance_Calculator"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/layoutTable"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/layoutTable"
        app:layout_constraintTop_toBottomOf="@+id/energycalculator" />

    <ImageButton
        android:id="@+id/energycalculator"
        android:layout_width="157dp"
        android:layout_height="156dp"
        android:adjustViewBounds="true"

        android:contentDescription="@string/energycalculator_speakable_text"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227"
        app:srcCompat="@drawable/energycalculator" />

    <ImageButton
        android:id="@+id/kitchen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"

        android:background="@color/Green"
        android:contentDescription="@string/kitchen_speakable_text"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/layoutTable"
        app:layout_constraintEnd_toEndOf="@+id/layoutTable"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="@+id/layoutTable"
        app:layout_constraintTop_toTopOf="@+id/layoutTable"
        app:layout_constraintVertical_bias="0.634"
        app:srcCompat="@drawable/kitchen" />

    <TextView
        android:id="@+id/txt_kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:background="@color/white0"
        android:fontFamily="@font/alata"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:text="@string/kitchen_speakable_text"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/kitchen"
        app:layout_constraintEnd_toEndOf="@+id/kitchen"
        app:layout_constraintStart_toStartOf="@+id/kitchen" />

    <ImageButton
        android:id="@+id/livingroom"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@color/Green"

        android:contentDescription="@string/livingroom_speakable_text"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/layoutTable"
        app:layout_constraintEnd_toEndOf="@+id/layoutTable"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="@+id/layoutTable"
        app:layout_constraintTop_toTopOf="@+id/layoutTable"
        app:layout_constraintVertical_bias="0.634"
        app:srcCompat="@drawable/livingroom" />

    <TextView
        android:id="@+id/txt_livingroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:background="@color/white0"
        android:fontFamily="@font/alata"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:text="@string/livingroom_speakable_text"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/livingroom"
        app:layout_constraintEnd_toEndOf="@+id/livingroom"
        app:layout_constraintStart_toStartOf="@+id/livingroom" />

    <ImageButton
        android:id="@+id/bedroom"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:adjustViewBounds="true"
        android:background="@color/Green"
        android:contentDescription="@string/bedroom_speakable_text"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/layoutTable"
        app:layout_constraintEnd_toEndOf="@+id/layoutTable"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/layoutTable"
        app:layout_constraintTop_toTopOf="@+id/layoutTable"
        app:layout_constraintVertical_bias="0.928"
        app:srcCompat="@drawable/bedroom" />

    <TextView
        android:id="@+id/txt_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:background="@color/white0"
        android:fontFamily="@font/alata"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:text="@string/bedroom_speakable_text"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bedroom"
        app:layout_constraintEnd_toEndOf="@+id/bedroom"
        app:layout_constraintStart_toStartOf="@+id/bedroom" />

    <ImageButton
        android:id="@+id/bathroom"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@color/Green"

        android:contentDescription="@string/bathroom_speakable_text"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/layoutTable"
        app:layout_constraintEnd_toEndOf="@+id/layoutTable"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="@+id/layoutTable"
        app:layout_constraintTop_toTopOf="@+id/layoutTable"
        app:layout_constraintVertical_bias="0.928"
        app:srcCompat="@drawable/bathroom" />

    <TextView
        android:id="@+id/txt_bathroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:background="@color/white0"
        android:fontFamily="@font/alata"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:text="@string/bathroom_speakable_text"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bathroom"
        app:layout_constraintEnd_toEndOf="@+id/bathroom"
        app:layout_constraintStart_toStartOf="@+id/bathroom" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1.0"
        app:menu="@menu/bottom_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>


